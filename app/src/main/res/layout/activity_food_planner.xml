<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".food_planner">


    <ImageView
        android:id="@+id/eatfit2"
        android:layout_width="124dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.095"
        app:srcCompat="@drawable/eatfit" />

    <TextView
        android:id="@+id/food_planner_name"
        android:layout_width="261dp"
        android:layout_height="43dp"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:text="FOOD PLANNER"
        android:textColor="@color/white"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eatfit2"
        app:layout_constraintVertical_bias="0.087" />

    <TextView
        android:id="@+id/qstn"
        android:layout_width="333dp"
        android:layout_height="44dp"
        android:gravity="center"
        android:text="Would you mind sharing your details?"
        android:textColor="@color/white"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/food_planner_name"
        app:layout_constraintVertical_bias="0.094" />

    <EditText
        android:id="@+id/heightbmi"
        android:layout_width="331dp"
        android:layout_height="55dp"
        android:background="@drawable/edit"
        android:ems="10"
        android:textColor="#2383AA"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:hint="Height (m)"
        android:inputType="numberDecimal"
        android:textColorHint="#2383AA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/qstn"
        app:layout_constraintVertical_bias="0.069" />

    <EditText
        android:id="@+id/weightbmi"
        android:layout_width="331dp"
        android:layout_height="55dp"
        android:background="@drawable/edit"
        android:ems="10"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:textColor="#2383AA"
        android:inputType="numberDecimal"
        android:textColorHint="#2383AA"
        android:hint="Weight (kg)"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.475"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heightbmi"
        app:layout_constraintVertical_bias="0.108" />

    <Spinner
        android:id="@+id/diseases"
        android:layout_width="316dp"
        android:layout_height="52dp"
        android:background="@drawable/editnew"
        android:dropDownSelector="@drawable/ic_baseline_arrow_circle_down_24"
        android:gravity="center"
        android:popupBackground="#2383AA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weightbmi"
        app:layout_constraintVertical_bias="0.34" />

    <TextView
        android:id="@+id/textdisease"
        android:layout_width="327dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="Any disease you're suffering from?"
        android:textColor="@color/white"
        android:textSize="19dp"
        app:layout_constraintBottom_toTopOf="@+id/diseases"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.452"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weightbmi"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/calc"
        android:layout_width="148dp"
        android:layout_height="46dp"
        android:background="@drawable/new_button1"
        android:elevation="100dp"
        android:text="Calculate"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/diseases"
        tools:ignore="OnClick" />

    <!--TextView
        android:id="@+id/newtext3"
        android:layout_width="106dp"
        android:layout_height="31dp"
        android:gravity="center"
        android:textSize="19dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calc" -->

</androidx.constraintlayout.widget.ConstraintLayout>